<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!--  
	configuration.xml : alias 사용하여 parameterType, resultType을 짧게 줄인다.
	그러면 phonebook.xml 에서 
	<select id="list" resultType="com.javaex.vo.PersonVo">를 아래로 줄일 수 있음
	<select id="list" resultType="PersonVo">
	-->
	<typeAliases>
		<typeAlias alias="PersonVo" type="com.javaex.vo.PersonVo" />
	</typeAliases>
	
	<mappers>
		<mapper resource="mybatis/mappers/phonebook.xml" />
	</mappers>
	
</configuration>